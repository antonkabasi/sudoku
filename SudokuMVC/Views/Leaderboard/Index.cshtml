@model IEnumerable<YourProjectNamespace.Models.LeaderboardEntry>
@{
    ViewData["Title"] = "Leaderboard";
}
<h1>Leaderboard</h1>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New Entry</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Player Name</th>
            <th>Difficulty</th>
            <th>Time (s)</th>
            <th>Date Achieved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PlayerName</td>
            <td>@item.Difficulty</td>
            <td>@item.StopwatchValue</td>
            <td>@item.DateAchieved.ToString("g")</td>
            <td>
                <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
